{
    "name": "arifulhb/algorithms",
    "description": "Basic Searching and Sorting Algorithms",
    "type": "library",
    "authors": [
        {
            "name": "Ariful Haque",
            "email": "arifulhb@gmail.com"
        }
    ],
    "require": {
        "php": "^7.3"
    },
    "autoload": {
        "psr-4": {
            "Arifulhb\\Algorithms\\Sort\\": "src/Algorithms/Sort"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Arifulhb\\Algorithms\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpunit/php-code-coverage": "^9.2",
        "squizlabs/php_codesniffer": "3.*"
    },
    "scripts": {
        "phpcs": "./vendor/bin/phpcs --standard=phpcs.xml -s --report=code  ./src",
        "tests": "./vendor/bin/phpunit tests"
    }
}
